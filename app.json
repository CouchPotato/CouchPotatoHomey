{
    "id": "couchpota.to",
	"version": "0.0.1",
	"compatibility": "0.x || 1.x",
    "name": {
        "en": "CouchPotato"
    },
    "author": {
        "name": "Ruud Burger",
        "email": "ruud@crashdummy.nl"
    },
	"permissions": [
		"homey:manager:speech-input",
		"homey:manager:speech-output",
		"homey:manager:ledring"
	],
	"dependencies": {
		"request-promise": "*",
		"bluebird": "*"
	},
    "speech": [
		{
			"id": "download",
			"importance": 1,
			"triggers": {
				"en": [ "download", "download the movie" ],
				"nl": [ "download", "download de film" ]
			}
		},
		{
			"id": "add",
			"importance": 1,
			"triggers": {
				"en": [ "add movie", "add the movie" ],
				"nl": [ "de film", "download de film" ]
			}
		},
		{
			"id": "hd",
			"importance": 1,
			"triggers": {
				"en": [ "HD", "H D" ],
				"nl": [ "hd", "ha dee" ]
			}
		},
		{
			"id": "best",
			"importance": 1,
			"triggers": {
				"en": [ "best", "in the best quality" ],
				"nl": [ "beste", "in beste kwaliteit", "in de beste kwaliteit" ]
			}
		},
		{
			"id": "3d",
			"importance": 1,
			"triggers": {
				"en": [ "3D", "in 3D", "in Three D" ],
				"nl": [ "3D", "in 3D", "in drie d", "in drie dee" ]
			}
		},
		{
			"id": "to_watchlist",
			"importance": 1,
			"triggers": {
				"en": [ "to my watchlist", "to my collection" ],
				"nl": [ "aan de filmlijst", "aan mijn watchlist", "aan mijn lijst", "aan mijn filmlijst", "aan mijn collectie" ]
			}
		},
		{
			"id": "in_watchlist",
			"importance": 1,
			"triggers": {
				"en": [ "in my watchlist", "in my collection" ],
				"nl": [ "in mijn filmlijst", "in mijn watchlist", "in mijn lijst", "in mijn filmlijst", "in mijn collectie" ]
			}
		}
    ],
	"flow": {
		"triggers": [
			{
				"id": "snatched",
				"title": {
					"en": "Movie downloaded"
				},
				"tokens": [
					{
						"name": "movie",
						"title": {
							"nl": "film",
							"en": "movie"
						}
					}
				]
			},
			{
				"id": "downloaded",
				"title": {
					"en": "Movie snatched"
				},
				"tokens": [
					{
						"name": "movie",
						"title": {
							"nl": "film",
							"en": "movie"
						}
					}
				]
			},
			{
				"id": "added",
				"title": {
					"en": "Movie added to watchlist"
				},
				"tokens": [
					{
						"name": "movie",
						"title": {
							"nl": "film",
							"en": "movie"
						}
					}
				]
			}
		]
	}
}
